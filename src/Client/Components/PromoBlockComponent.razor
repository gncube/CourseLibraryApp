@using Blogifier.Domain;
<!-- Promo Block -->
<section class="g-py-50">
    <div class="container">
        <!-- News Section -->
        <div class="row no-gutters">

            @foreach (var promoArticleDto in LeadingPromoArticles)
            {
                string iconString = "icon-book-open";
                switch (promoArticleDto.ContentType)
                {
                    case BlogContentType.Article:
                        iconString = "icon-book-open";
                        break;
                    case BlogContentType.Image:
                        iconString = "icon-camera";
                        break;
                    case BlogContentType.Video:
                        iconString = "icon-control-play";
                        break;
                    case BlogContentType.Audio:
                        iconString = "icon-control-play";
                        break;
                    default:
                        break;
                }

                <div class="col-lg-6 g-pr-1--lg g-mb-30 g-mb-2--lg">
                    <!-- Article -->
                    <article class="u-block-hover">
                        <figure class="u-shadow-v25 g-bg-cover g-bg-white-gradient-opacity-v1--after">
                            <img class="img-fluid w-100 u-block-hover__main--zoom-v1" src="@promoArticleDto.ImageSrc"
                                 alt="Image Description">
                        </figure>

                        <span class="g-hidden-xs-down u-icon-v3 u-icon-size--sm g-font-size-13 g-bg-white rounded-circle g-pos-abs g-top-30 g-right-30">
                            <i class="@iconString"></i>
                        </span>

                        <span class="g-hidden-xs-down g-pos-abs g-top-30 g-left-30">
                            <a class="btn btn-xs u-btn-darkpurple text-uppercase rounded-0" href="#">@promoArticleDto.Category</a>
                        </span>

                        <div class="g-pos-abs g-bottom-30 g-left-30 g-right-30">
                            <small class="g-color-white">
                                <i class="icon-clock g-pos-rel g-top-1 g-mr-2"></i> @promoArticleDto.PublishDate.ToString("MMMM d, yyyy")
                            </small>

                            <h3 class="h4 g-my-10">
                                <a class="g-color-white g-color-white--hover" href="@($"blogs/posts/{promoArticleDto.Id}")">
                                    @promoArticleDto.Title
                                </a>
                            </h3>

                            <ul class="g-hidden-xs-down u-list-inline g-font-size-12 g-color-white">
                                <li class="list-inline-item">
                                    <i class="icon-eye g-pos-rel g-top-1 g-mr-2"></i> @promoArticleDto.Views
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <i class="icon-finance-206 u-line-icon-pro align-middle g-pos-rel g-top-1 g-mr-2"></i>
                                    @promoArticleDto.Likes
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <i class="icon-share g-pos-rel g-top-1 g-mr-2"></i> @promoArticleDto.Shares
                                </li>
                            </ul>
                        </div>
                    </article>
                    <!-- End Article -->
                </div>

            }



            @foreach (var promoArticleDto in FollowingPromoArticles)
            {
                <div class="col-lg-4 g-pr-1--lg g-mb-30 g-mb-0--lg">
                    <!-- Article -->
                    <article class="u-block-hover">
                        <figure class="u-shadow-v25 u-bg-overlay g-bg-white-gradient-opacity-v1--after">
                            <img class="u-block-hover__main--zoom-v1 img-fluid w-100" src="@promoArticleDto.ImageSrc"
                                 alt="Image Description">
                        </figure>

                        <div class="w-100 text-center g-absolute-centered g-px-30">
                            <a class="btn btn-xs u-btn-cyan text-uppercase rounded-0" href="@($"blogs/posts/{promoArticleDto.Id}")">@promoArticleDto.Category</a>
                            <h3 class="h4 g-mt-10">
                                <a class="g-color-white" href="#">@promoArticleDto.Title</a>
                            </h3>
                            <small class="g-color-white">
                                <i class="icon-clock g-pos-rel g-top-1 g-mr-2"></i> @promoArticleDto.PublishDate.ToString("MMMM d, yyyy")
                            </small>
                        </div>
                    </article>
                    <!-- End Article -->
                </div>
            }
        </div>
        <!-- News Section -->
    </div>
</section>
<!-- End Promo Block -->